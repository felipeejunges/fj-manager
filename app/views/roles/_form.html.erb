<%= form_with(model: role) do |form| %>
  <div class="row">
    <div class="col-12">
      <% if role.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(role.errors.count, "error") %> prohibited this role from being saved:</h2>

          <ul>
            <% role.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.text_field :name, class: "form-control", readonly: readonly %>
        <%= form.label :name %>
      </div>
    </div>
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.text_field :code, class: "form-control", readonly: readonly %>
        <%= form.label :code %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-10 mb-1">
      <div class="form-floating">
        <%= form.text_field :description, class: "form-control", readonly: readonly %>
        <%= form.label :description %>
      </div>
    </div>
    <div class="col-sm-12 col-md-2 mb-1">
      <div class="form-floating">
        <%= form.select :active, [['No', false], ['Yes', true]], {}, class: "form-select", disabled: readonly %>
        <%= form.label :active %>
      </div>
    </div>
  </div>
  <% unless readonly %>
    <div class="row">
      <div class="col-12">
        <%= form.submit 'Save', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

