<%= form_with(model: user) do |form| %>
  <div class="row">
    <div class="col-12">
      <% if user.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

          <ul>
            <% user.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.text_field :first_name, class: "form-control", readonly: readonly %>
        <%= form.label :first_name %>
      </div>
    </div>
    <div class="col-sm-12 col-md-6 mb-1">
      <div class="form-floating">
        <%= form.text_field :last_name, class: "form-control", readonly: readonly %>
        <%= form.label :last_name %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-10 mb-1">
      <div class="form-floating">
        <%= form.email_field :email, class: "form-control", readonly: readonly %>
        <%= form.label :email %>
      </div>
    </div>
    <div class="col-sm-12 col-md-2 mb-1">
      <div class="form-floating">
        <%= form.select :admin, [['No', false], ['Yes', true]], {}, class: "form-select", disabled: readonly %>
        <%= form.label :admin %>
      </div>
    </div>
  </div>
  <% unless readonly %>
    <div class="row">
      <div class="col-sm-12 col-md-6 mb-1">
        <div class="form-floating">
          <%= form.password_field :password, class: "form-control" %>
          <%= form.label :password %>
        </div>
      </div>
      <div class="col-sm-12 col-md-6 mb-1">
        <div class="form-floating">
          <%= form.password_field :password_confirmation, class: "form-control" %>
          <%= form.label :password_confirmation %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= form.submit 'Save', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>

