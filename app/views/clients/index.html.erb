<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col-12">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
      <h1 class="h2">Clients</h1>
      <div class="btn-toolbar mb-2 mb-md-0 mx-2">
          <%= link_to "New client", new_client_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-12">
    <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Name</th>
              <th scope="col">Document</th>
              <th scope="col">Document Type</th>
              <th scope="col">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @clients.each do |client| %>
              <tr>
                <td><%= client.id %></td>
                <td><%= client.name %></td>
                <td><%= client.document %></td>
                <td><%= client.document_type %></td>
                <td><%= link_to "Show", client %> | <%= link_to "Edit", edit_client_path(client) %> </td>
              </tr>
            <% end %>
          </tbody>
        </table>
  </div>
</div>
