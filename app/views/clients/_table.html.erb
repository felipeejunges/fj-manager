<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Document</th>
      <th scope="col">Document Type</th>
      <th scope="col">
        <%= is_report ? "Payment Type" : "Actions" %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% clients.each do |client| %>
      <tr>
        <td><%= client.id %></td>
        <td>
          <% if is_report %>
            <%= client.name %>
          <% else %>
            <%= link_to client.name, client %>
          <% end %>
          <% if client.current_status.present? %>
            <%= render "client/invoices/status_badge", status: client.current_status, text: client.current_status.humanize %>
          <% end %>
        </td>
        <td><%= client.document %></td>
        <td><%= client.document_type.upcase %></td>
        <td>
          <% if is_report %>
            <%= client.payment_type.humanize %>
          <% else %>
            <div class="btn-group me-2">
              <%= link_to client, class: "btn btn-sm btn-outline-secondary" do %>
                <i class="bi bi-eye"></i>
              <% end %>
              <%= link_to edit_client_path(client), class: "btn btn-sm btn-outline-primary" do %>
                <i class="bi bi-pencil-square"></i>
              <% end %>
              <%= link_to client_path(client), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" do %>
                <i class="bi bi-trash"></i>
              <% end %>
            </div>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>