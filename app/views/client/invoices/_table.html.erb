<table class="table table-striped table-sm">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Description</th>
      <th scope="col">Payment Type</th>
      <th scope="col">Reference Month</th>
      <th scope="col">Status</th>
      <th scope="col">Had Errors?</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% invoices.order(reference_date: :desc).each do |invoice| %>
      <tr>
        <td><%= invoice.id %></td>
        <td>
          <%= link_to invoice.description, client_invoice_path(client_id: @client.id, id: invoice.id) %>
        </td>
        <td><%= invoice.payment_type.humanize %></td>
        <td><%= invoice.reference_date %></td>
        <td><%= render "client/invoices/status_badge", status: invoice.status, text: invoice.status.humanize %></td>
        <td><%= invoice.error_logs.count > 0 %></td>
        <td>
          <%= link_to  client_invoice_path(client_id: @client.id, id: invoice.id), class: "btn btn-sm btn-outline-secondary" do %>
            <i class="bi bi-eye"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>