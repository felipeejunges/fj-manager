<%= render "shared/menu" %>
<div class="col-sm p-3 min-vh-100">
  <%= render 'shared/notices' %>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Plans</h1>
        <div class="btn-toolbar mb-2 mb-md-0 mx-2">
          <% if current_user.admin? %>
            <%= link_to new_client_plan_path, class: "btn btn-sm btn-outline-secondary" do %>
              <i class="bi bi-plus-circle"></i> New plan
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12">
      <%= render "table", client_plans: @client_plans %>
    </div>
  </div>
</div>