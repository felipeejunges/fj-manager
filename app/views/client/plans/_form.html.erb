<%= form_with(model: client_plan) do |form| %>
  <div class="row">
    <div class="col-12">
      <% if client_plan.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(client_plan.errors.count, "error") %> prohibited this plan from being saved:</h2>

          <ul>
            <% client_plan.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-4 mb-1">
      <div class="form-floating">
        <%= form.text_field :name, class: "form-control", readonly: readonly %>
        <%= form.label :name %>
      </div>
    </div>
    <div class="col-sm-12 col-md-4 mb-1">
      <div class="form-floating">
        <%= form.datetime_field :start_date, class: "form-control", readonly: readonly %>
        <%= form.label :start_date %>
      </div>
    </div>
    <div class="col-sm-12 col-md-4 mb-1">
      <div class="form-floating">
        <%= form.datetime_field :end_date, class: "form-control", readonly: readonly %>
        <%= form.label :end_date %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 mb-1">
      <div class="form-floating">
        <%= form.text_field :description, class: "form-control", readonly: readonly %>
        <%= form.label :description %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 col-md-4 mb-1">
      <div class="form-floating">
        <%= form.text_field :cpde, class: "form-control", readonly: readonly %>
        <%= form.label :code %>
      </div>
    </div>
    <div class="col-sm-12 col-md-4 mb-1">
      <div class="form-floating">
        <%= form.select :billable_period, Client::PlanPresenter.billable_period_options, {}, class: "form-select", disabled: readonly %>
        <%= form.label :billable_period %>
      </div>
    </div>
    <div class="col-sm-12 col-md-2 mb-1">
      <div class="form-floating">
        <%= form.number_field :price, class: "form-control", readonly: readonly, step: 0.01 %>
        <%= form.label :price %>
      </div>
    </div>
    <div class="col-sm-12 col-md-2 mb-1">
      <div class="form-floating">
        <%= form.number_field :max_discount, class: "form-control", readonly: readonly, min: 0, max: 100, step: 0.01 %>
        <%= form.label :max_discount %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-4 col-md-2 col-lg-1 mb-1 mr-1">
      <div class="form-check form-switch">
        <%= form.check_box :sale, class: "form-check-input", disabled: readonly %>
        <%= form.label :sale, class: "form-check-label" %>
      </div>
    </div>
    <div class="col-sm-4 col-md-2 col-lg-1 mb-1 mr-1">
      <div class="form-check form-switch">
        <%= form.check_box :signable, class: "form-check-input", disabled: readonly %>
        <%= form.label :signable, class: "form-check-label" %>
      </div>
    </div>
    <div class="col-sm-4 col-md-2 col-lg-1 mb-1 mr-1">
      <div class="form-check form-switch">
        <%= form.check_box :commissionable, class: "form-check-input", disabled: readonly %>
        <%= form.label :commissionable, class: "form-check-label" %>
      </div>
    </div>
  </div>
  <% unless readonly %>
    <div class="row">
      <div class="col-12">
        <%= form.submit 'Save', class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
<% end %>
