<%= render "shared/menu" %>
<div class="col-sm p-3 min-vh-100">
  <%= render 'shared/notices' %>
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h1 class="h2">
          <%= @client_plan.name %>
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0 mx-2">
          <div class="btn-group me-2">
            <%= link_to client_plan_path(@client_plan), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" do %>
              <i class="bi bi-trash"></i> Delete
            <% end %>
            <%= link_to edit_client_plan_path(@client_plan), class: "btn btn-sm btn-outline-primary" do %>
              <i class="bi bi-pencil-square"></i> Edit
            <% end %>
            <%= link_to client_plans_path, class: "btn btn-sm btn-outline-secondary" do %>
              <i class="bi bi-arrow-return-left"></i> Back to Plans
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<p style="color: green"><%= notice %></p>

<%= render @client_plan %>
</div>