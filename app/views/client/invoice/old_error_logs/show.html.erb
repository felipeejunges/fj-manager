<%= render "shared/menu" %>
<div class="col-sm p-3 min-vh-100">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 border-bottom">
        <h1 class="h2">
          Error #<%= @old_error_log.retry_number %> of Invoice <%= @invoice.reference_date.month %>/<%= @invoice.reference_date.year%> 
          - Client: <%= @client.name %>
        </h1>
        <div class="btn-toolbar mb-2 mb-md-0 mx-2">
          <%= link_to client_invoice_path(@client, @invoice), class: "btn btn-sm btn-outline-secondary" do %>
            <i class="bi bi-arrow-return-left"></i> Back to invoice
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="row mx-1 mt-2">
    <div class="col-12">
      <table class="table table-bordered">
        <tbody>
          <tr>
            <td>
              <strong>ID</strong>
            </td>
            <td>
              <%= @old_error_log.id %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Retry Number</strong>
            </td>
            <td>
              <%= @old_error_log.retry_number %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Date</strong>
            </td>
            <td>
              <%= @old_error_log.date %>
            </td>
          </tr>
          <tr>
            <td>
              <strong>Log</strong>
            </td>
            <td>
              <%= @old_error_log.log %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>